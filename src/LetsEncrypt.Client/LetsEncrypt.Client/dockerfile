FROM mcr.microsoft.com/dotnet/core/runtime:2.2 AS base

# Set the working directory
WORKDIR /app

# Copy the app
COPY bin/Release/publish /app

# Set environment variables
ENV TZ=Europe/Brussels
ENV STAGING=1
ENV ACCOUNT_EMAIL=...
ENV ACCOUNT_KEY=...
ENV DOMAIN=...
ENV CERT_COUNTRY=...
ENV CERT_STATE=...
ENV CERT_LOCALITY=...
ENV CERT_ORGANISATION=...
ENV CERT_ORGANISATION_UNIT=...
ENV DELAY=3600000
ENV CERTIFICATE_PASSWORD=...
ENV CERTIFICATE_PATH=...
ENV CHALLENGE_PATH=...

# Start the app
ENTRYPOINT ["dotnet", "LetsEncrypt.Client.dll"]